@model IEnumerable<VolunteerRegistrations>
<div class="container">
    <div class="row d-flex">
        <div class="col-6">
            <h1 class="h4 m-0">Registered Event Details</h1>
        </div>
       
            
       

           @*  <div class="col-6 text-end pb-2">
                <a asp-controller="Registration" asp-action="RegisteredEvents" class="btn btn-dark">Registered Events</a>
            </div> *@
       

    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>City</th>
            <th>Description</th>
            <th>Date</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Event.Name</td>
                <td>@obj.Event.City</td>
                <td>@obj.Event.Description</td>
                <td>@obj.Event.Date</td>


                <td class="d-flex align-items-center justify-content-around">
                   
                       
                    
                  
                       
                           @*  <div class="d-flex align-items-center" style="gap: 10px; text-align:center">
                                <a class="btn btn-success" asp-area="User" asp-controller="Registration" asp-action="Register" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Register</a>
                            </div> *@
                       
                            <div class="d-flex align-items- justify-content-between" style="gap: 10px; text-align:center">
                                <a class="btn btn-danger" asp-area="User" asp-controller="Registration" asp-action="Cancel" asp-route-id="@obj.RegistrationId"><i class="bi bi-pencil-square"></i>Cancel</a>
                            </div>

                    <div class="d-flex align-items-center" style="gap: 10px; text-align:center">
                        <a class="btn btn-dark" asp-area="User" asp-controller="Feedback" asp-action="AddFeedback" asp-route-id="@obj.RegistrationId"><i class="bi bi-pencil-square"></i>Feedback</a>
                    </div>
                    
                </td>
                

            </tr>
          
        }
    </tbody>
</table>
