<!-- Welcome Section -->
@model ApplicationUser
<style>
    .ICon-Container {
        margin-bottom: 50px;
    }
</style>
<div class="container mt-4">
    <div class="welcome-section text-center">
        <h1>Welcome, @Model.Name</h1>
        <p class="lead text-dark">Manage your platform efficiently and effortlessly from this dashboard.</p>
        <button id="getStarted" class="btn btn-primary mt-3">Get Started</button>
    </div>

    <!-- Icon Cards Section -->
    <div class="row mt-5 mb-5 ICon-Container">
        <div class="col-md-4">
            <a id="EventLink" asp-action="Index" asp-controller="Event" asp-area="Admin" class="text-decoration-none">
                <div class="icon-card text-center p-4 border rounded shadow-sm">
                    <i class="bi bi-calendar-event display-4"></i>
                    <h4 class="mt-3">Manage Events</h4>
                    <p>Access and manage all events.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a id="VolunteeLink" asp-action="VolunteersList" asp-controller="DashBoard" asp-area="Admin" class="text-decoration-none">
                <div class="icon-card text-center p-4 border rounded shadow-sm">
                    <i class="bi bi-people display-4"></i>
                    <h4 class="mt-3">Volunteers</h4>
                    <p>Track and manage volunteers.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4 ">
            <a id="FeedbackLink" asp-action="Feedbacks" asp-controller="Feedback" asp-area="User" class="text-decoration-none">
                <div class="icon-card text-center p-4 border rounded shadow-sm">
                    <i class="bi bi-chat-dots display-4"></i>
                    <h4 class="mt-3">Feedback</h4>
                    <p>View feedback from events.</p>
                </div>
            </a>
        </div>
    </div>
</div>

<script>
    var animation = () => {
        const cards = document.querySelectorAll('.icon-card');
        cards.forEach((card, index) => {
            setTimeout(() => {
                card.classList.add('animate');
            }, index * 200); // Delay each card's animation
        });
    };
    
    document.addEventListener("DOMContentLoaded", animation);
    document.getElementById("getStarted").addEventListener("click", () => {
        const cards = document.querySelectorAll('.icon-card');
        cards.forEach((card, index) => {
           
                card.classList.remove('animate');
          // Delay each card's animation
           
        });
        animation();
    });
</script>