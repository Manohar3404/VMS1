<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Volunteer Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/star.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminPanel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VMS1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.4.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <style>
        /* Custom styles for header and footer */
        body{
            background-color: #F6E2D0;
        }
        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.8);
            transition: color 0.3s ease-in-out, background-color 0.3s ease-in-out;
        }

            .navbar-dark .navbar-nav .nav-link:hover,
            .navbar-dark .navbar-nav .nav-link:focus {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.05);
            }

            .navbar-dark .navbar-nav .nav-link.active {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }

        .footer {
            padding: 0.5rem 0; /* Reduced padding to make the footer height similar to the header */
        }

            .footer a {
                color: rgba(255, 255, 255, 0.8);
                transition: color 0.3s ease-in-out;
            }

                .footer a:hover,
                .footer a:focus {
                    color: #fff;
                }

        /* Ensure login and register links are visible */
        .navbar-dark .navbar-nav .nav-link.text-white {
            color: rgba(255, 255, 255, 0.9);
        }

            .navbar-dark .navbar-nav .nav-link.text-white:hover,
            .navbar-dark .navbar-nav .nav-link.text-white:focus {
                color: #fff;
            }

        /* Flexbox layout for the entire page */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body style="  background-color: #F6E2D0;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Volunteer Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-house-door"></i> Home
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door"></i> Home
                                </a>
                            </li>
                        }
                        @if(User.IsInRole(SD.Role_User)){
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Home/Index/#about">
                                <i class="bi bi-info-circle"></i> About
                            </a>
                        </li>
                        }else {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="VolunteersList" asp-area="Admin">
                                 Volunteers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Feedback" asp-action="Feedbacks" asp-area="User">
                                 Feedbacks
                            </a>
                        </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Event" asp-action="Index">
                                <i class="bi bi-calendar-event"></i> Events
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
     @* <footer class="footer bg-dark text-white mt-auto">
         <div class="container">
             <div class="d-flex justify-content-between">
                 <span>&copy; 2025 - VMS11</span>
                 <div id="contact">
                     <p>Contact Us :</p>
                     <p>Email: <a href="mailto:contact@volunteer.com">contact@volunteer.com</a></p>
                 </div>
             </div>
         </div>
     </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
   
        <!-- Other body content -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

</body>
</html>